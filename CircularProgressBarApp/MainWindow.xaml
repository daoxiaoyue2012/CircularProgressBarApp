<Window x:Class="CircularProgressBarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CircularProgressBarApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Black" ContentRendered="Window_ContentRendered" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <local:CircularProgressBar x:Name="progressBar1" StrokeThickness="10" Radius="80" TextSize="50" TextColor="Red" ArcSegmentColor="DarkRed" StrokeDashPattern=""/>
        <local:CircularProgressBar x:Name="progressBar2"
                                   StrokeThickness="10"
                                   Radius="120"
                                   TextSize="50"
                                   TextColor="Red"
                                   ArcSegmentColor="DarkRed"
                                   StrokeDashPattern="0.1" 
                                   Grid.Column="1"/>
    </Grid>
</Window>
